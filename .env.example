# Xero OAuth Configuration
# Get these from https://developer.xero.com/myapps
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here
XERO_REDIRECT_URI=http://localhost:3001/api/xero/callback

# Session Security
SESSION_SECRET=your_session_secret_here

# Database (optional for development, uses in-memory storage)
# DATABASE_URL=file:./dev.db

# Cache (optional for development, uses in-memory storage)
# CACHE_URL=redis://localhost:6379

# Groq AI Configuration
# Get your free API key from https://groq.com
GROQ_API=your_groq_api_key_here
